@using ApartmentManagement.Models
@model ApartmentManagement.Models.Tenant

@{
    ViewData["Title"] = "Tenant Profile";
    bool isActive = Model.ContractEndDate >= DateTime.Today;
    string statusBadge = isActive ? "bg-success" : "bg-danger";
    string statusText = isActive ? "Active Occupant" : "Left / Expired";
}

<div class="container py-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Tenants" class="text-decoration-none" style="color: var(--brand-600);">Directory</a></li>
            <li class="breadcrumb-item active" aria-current="page">Tenant Profile</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm text-center h-100" style="border-radius: 0.75rem;">
                <div class="card-body p-4">
                    <div class="rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3"
                         style="width: 100px; height: 100px; background-color: var(--brand-100); color: var(--brand-700); font-size: 2.5rem; font-weight: 700;">
                        @(Model.User?.FullName?.Substring(0, 1) ?? "T")
                    </div>
                    <h4 class="fw-bold mb-1" style="color: var(--brand-900);">@Model.User?.FullName</h4>
                    <p class="text-muted mb-3">@Model.User?.Email</p>

                    <span class="badge rounded-pill @statusBadge px-3 py-2 mb-4">@statusText</span>

                    <div class="text-start border-top pt-4">
                        <div class="mb-3">
                            <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Phone Number</small>
                            <div class="text-dark"><i class="fas fa-phone-alt text-muted me-2"></i> @(Model.User?.PhoneNumber ?? "N/A")</div>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">CNIC / ID</small>
                            <div class="text-dark"><i class="fas fa-id-card text-muted me-2"></i> @Model.CNIC</div>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Permanent Address</small>
                            <div class="text-dark"><i class="fas fa-map-marker-alt text-muted me-2"></i> @Model.PermanentAddress</div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white border-top-0 pb-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary w-100 fw-bold">
                        <i class="fas fa-pen me-2"></i> Edit Details
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-8 mb-4">
            <div class="card border-0 shadow-sm mb-4" style="border-radius: 0.75rem;">
                <div class="card-header bg-white p-4 border-bottom-0">
                    <h5 class="fw-bold m-0" style="color: var(--brand-800);">Lease Agreement</h5>
                </div>
                <div class="card-body p-4 pt-0">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="p-3 rounded" style="background-color: #f8fafc;">
                                <label class="small text-uppercase fw-bold text-muted mb-1">Apartment</label>
                                <div class="fw-bold fs-5 text-dark">Unit @Model.Apartment?.ApartmentNumber</div>
                                <div class="text-muted small">@Model.Apartment?.Building?.Name</div>
                                <span class="badge bg-secondary mt-1">@Model.Apartment?.Type</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 rounded" style="background-color: #f8fafc;">
                                <label class="small text-uppercase fw-bold text-muted mb-1">Contract Duration</label>
                                <div class="fw-bold text-dark">@Model.ContractStartDate.ToShortDateString()</div>
                                <div class="text-muted small mb-1">to</div>
                                <div class="fw-bold text-dark">@Model.ContractEndDate.ToShortDateString()</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100" style="background-color: #f0fdf4; border: 1px solid #bbf7d0;">
                        <div class="card-body">
                            <label class="small text-uppercase fw-bold text-success mb-2">Monthly Rent</label>
                            <div class="d-flex justify-content-between align-items-end">
                                <div class="fw-bold fs-3 text-success">@Model.MonthlyRent.ToString("C0")</div>
                                <small class="text-success fw-bold">@Model.RentPlanMonths Month Plan</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100" style="background-color: #fff7ed; border: 1px solid #fed7aa;">
                        <div class="card-body">
                            <label class="small text-uppercase fw-bold text-warning mb-2" style="color: #c2410c;">Security Deposit</label>
                            <div class="fw-bold fs-3" style="color: #9a3412;">@Model.SecurityDeposit.ToString("C0")</div>
                            <small style="color: #9a3412;">Refundable</small>
                        </div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="card border-0 shadow-sm" style="border-radius: 0.75rem;">
                    <div class="card-body p-4">
                        <h6 class="fw-bold text-muted text-uppercase small mb-2">Notes</h6>
                        <p class="mb-0 text-muted fst-italic">@Model.Notes</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>