@using ApartmentManagement.Models
@using Newtonsoft.Json
@model IEnumerable<ApartmentManagement.Models.Apartment>

@{
    ViewData["Title"] = "My Properties";
}

<section class="section">
    <div class="container" data-aos="fade-up">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="fw-bold text-dark">My Properties</h2>
                <p class="text-muted mb-0">Manage units, pricing, and availability.</p>
            </div>
            <a asp-action="AddApartment" class="btn btn-primary fw-bold">
                <i class="bi bi-plus-lg me-2"></i>Add Unit
            </a>
        </div>

        <div class="card border-0 shadow-sm overflow-hidden">
            <div class="table-responsive">
                <table class="table mb-0 align-middle table-hover">
                    <thead class="bg-light">
                        <tr>
                            <th class="py-3 px-4 text-uppercase text-secondary small fw-bold">Unit Details</th>
                            <th class="py-3 px-4 text-uppercase text-secondary small fw-bold">Type & Size</th>
                            <th class="py-3 px-4 text-uppercase text-secondary small fw-bold">Base Rent</th>
                            <th class="py-3 px-4 text-uppercase text-secondary small fw-bold">Status</th>
                            <th class="py-3 px-4 text-end text-uppercase text-secondary small fw-bold">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white">
                        @foreach (var item in Model)
                        {
                            bool isRented = item.Status == ApartmentStatus.Rented;
                            string statusBadge = item.Status switch
                            {
                                ApartmentStatus.Available => "bg-success text-white",
                                ApartmentStatus.Rented => "bg-primary text-white",
                                ApartmentStatus.Maintenance => "bg-warning text-dark",
                                _ => "bg-secondary text-white"
                            };

                            string photosJson = item.Photos ?? "[]";

                            <tr class="border-bottom">
                                <td class="px-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded bg-light text-dark d-flex align-items-center justify-content-center me-3 border"
                                             style="width: 45px; height: 45px;">
                                            <i class="bi bi-door-closed fs-5"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">Unit @item.ApartmentNumber</div>
                                            <div class="small text-muted">@item.Building?.Name • Floor @item.FloorNumber</div>
                                        </div>
                                    </div>
                                </td>

                                <td class="px-4 py-3">
                                    <div class="fw-bold">@item.Type</div>
                                    <div class="small text-muted">@item.Size Sq. Ft</div>
                                </td>

                                <td class="px-4 py-3">
                                    <div class="fw-bold text-success">@item.BaseRentRate.ToString("C0")</div>
                                </td>

                                <td class="px-4 py-3">
                                    <span class="badge rounded-pill @statusBadge px-3 py-2 fw-normal">
                                        @item.Status
                                    </span>
                                </td>

                                <td class="px-4 py-3 text-end">
                                    <div class="btn-group shadow-sm">
                                        <button type="button" class="btn btn-sm btn-outline-primary"
                                                data-bs-toggle="modal" data-bs-target="#viewModal"
                                                data-number="@item.ApartmentNumber"
                                                data-building="@item.Building?.Name"
                                                data-floor="@item.FloorNumber"
                                                data-size="@item.Size"
                                                data-type="@item.Type"
                                                data-rent="@item.BaseRentRate"
                                                data-status="@item.Status"
                                                data-desc="@item.Description"
                                                data-photos="@photosJson"
                                                title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </button>

                                        @if (isRented)
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-secondary" disabled title="Cannot edit rented unit">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <a asp-action="EditApartment" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning text-dark" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        }

                                        @if (isRented)
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-secondary" disabled title="Cannot delete rented unit">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-danger"
                                                    data-bs-toggle="modal" data-bs-target="#deleteModal"
                                                    data-id="@item.Id"
                                                    title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="viewModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="modal-title fw-bold"><i class="bi bi-info-circle me-2"></i>Apartment Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="row g-4">
                    <div class="col-md-6 border-end">
                        <div class="text-center mb-4">
                            <div class="display-6 fw-bold text-primary" id="viewNumber"></div>
                            <div class="text-muted fw-bold" id="viewBuilding"></div>
                            <span class="badge bg-success mt-2" id="viewStatusBadge"></span>
                        </div>

                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between px-0">
                                <span class="text-muted">Floor Level</span>
                                <span class="fw-bold" id="viewFloor"></span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between px-0">
                                <span class="text-muted">Total Area</span>
                                <span class="fw-bold"><span id="viewSize"></span> Sq. Ft</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between px-0">
                                <span class="text-muted">Apartment Type</span>
                                <span class="fw-bold" id="viewType"></span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between px-0 bg-light p-2 rounded mt-2">
                                <span class="text-dark fw-bold">Base Rent</span>
                                <span class="fw-bold text-success fs-5" id="viewRent"></span>
                            </li>
                        </ul>
                    </div>

                    <div class="col-md-6">
                        <h6 class="text-uppercase text-muted small fw-bold mb-2">Description</h6>
                        <p class="text-muted small bg-light p-3 rounded" id="viewDesc" style="min-height: 80px;"></p>

                        <h6 class="text-uppercase text-muted small fw-bold mb-2 mt-4">Gallery</h6>
                        <div id="viewPhotosContainer" class="d-flex flex-wrap gap-2"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0 bg-light">
                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title fw-bold">Delete Apartment</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="DeleteApartment" method="post">
                <div class="modal-body">
                    <input type="hidden" name="id" id="deleteId" />
                    <p class="text-muted">Are you sure you want to delete this apartment? This action cannot be undone.</p>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger fw-bold">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // --- 1. VIEW MODAL LOGIC ---
        var viewModal = document.getElementById('viewModal')
        viewModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget

            document.getElementById('viewNumber').textContent = "Unit " + button.getAttribute('data-number');
            document.getElementById('viewBuilding').textContent = button.getAttribute('data-building');
            document.getElementById('viewFloor').textContent = button.getAttribute('data-floor');
            document.getElementById('viewSize').textContent = button.getAttribute('data-size');
            document.getElementById('viewType').textContent = button.getAttribute('data-type');
            document.getElementById('viewStatusBadge').textContent = button.getAttribute('data-status');

            var rent = parseFloat(button.getAttribute('data-rent'));
            document.getElementById('viewRent').textContent = new Intl.NumberFormat('en-US', { style: 'currency', currency: 'PKR', minimumFractionDigits: 0 }).format(rent).replace('PKR', 'Rs.'); // Updated currency to match your new form
            document.getElementById('viewDesc').textContent = button.getAttribute('data-desc') || "No description provided.";

            var photosContainer = document.getElementById('viewPhotosContainer');
            photosContainer.innerHTML = '';
            try {
                var photos = JSON.parse(button.getAttribute('data-photos'));
                if (photos && photos.length > 0) {
                    photos.forEach(function(photoUrl) {
                        var img = document.createElement('img');
                        img.src = photoUrl;
                        img.className = "rounded border shadow-sm";
                        img.style.width = "80px";
                        img.style.height = "80px";
                        img.style.objectFit = "cover";
                        photosContainer.appendChild(img);
                    });
                } else {
                    photosContainer.innerHTML = '<span class="text-muted small fst-italic">No photos uploaded.</span>';
                }
            } catch (e) { console.error(e); }
        })

        // --- 2. DELETE MODAL LOGIC ---
        var deleteModal = document.getElementById('deleteModal')
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget
            document.getElementById('deleteId').value = button.getAttribute('data-id');
        })
    </script>
}