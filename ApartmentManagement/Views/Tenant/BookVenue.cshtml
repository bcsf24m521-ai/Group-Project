@model ApartmentManagement.Models.VenueBooking

@{
    ViewData["Title"] = "Book Venue";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Book a Venue</h3>
                </div>
                <div class="card-body">
                    <form asp-action="BookVenue" method="post" id="bookingForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="VenueType" class="form-label fw-bold"></label>
                            <select asp-for="VenueType" class="form-select" asp-items="Html.GetEnumSelectList<ApartmentManagement.Models.VenueType>()">
                                <option value="">-- Select Venue --</option>
                            </select>
                            <span asp-validation-for="VenueType" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="BookingDate" class="form-label fw-bold"></label>
                                <input asp-for="BookingDate" class="form-control" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="BookingDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="BookingTime" class="form-label fw-bold">Start Time</label>
                                <input asp-for="BookingTime" class="form-control" type="time" id="startTime" />
                                <span asp-validation-for="BookingTime" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="EndTime" class="form-label fw-bold">End Time</label>
                                <input asp-for="EndTime" class="form-control" type="time" id="endTime" />
                                <span asp-validation-for="EndTime" class="text-danger"></span>
                                <span id="timeError" class="text-danger small" style="display:none;">End time must be after start time.</span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label asp-for="Purpose" class="form-label fw-bold"></label>
                                <input asp-for="Purpose" class="form-control" placeholder="e.g., Birthday Party" />
                                <span asp-validation-for="Purpose" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="NumberOfGuests" class="form-label fw-bold"></label>
                                <input asp-for="NumberOfGuests" class="form-control" type="number" min="1" placeholder="0" />
                                <span asp-validation-for="NumberOfGuests" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="VenueBookings" class="btn btn-outline-secondary me-md-2">Cancel</a>
                            <input type="submit" value="Submit Request" class="btn btn-primary px-4" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Simple client-side validation to ensure EndTime is after StartTime
        document.getElementById('bookingForm').addEventListener('submit', function(e) {
            var startTime = document.getElementById('startTime').value;
            var endTime = document.getElementById('endTime').value;
            var errorSpan = document.getElementById('timeError');

            if (startTime && endTime) {
                if (endTime <= startTime) {
                    e.preventDefault(); // Stop form submission
                    errorSpan.style.display = 'block';
                } else {
                    errorSpan.style.display = 'none';
                }
            }
        });

        // Clear error when user changes input
        document.getElementById('endTime').addEventListener('change', function() {
             document.getElementById('timeError').style.display = 'none';
        });
    </script>
}