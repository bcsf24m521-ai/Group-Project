@model IEnumerable<ApartmentManagement.Models.Apartment>

@{
    ViewData["Title"] = "Office Apartments";
    ViewData["PageType"] = "Category";
    var categoryType = ViewData["CategoryType"]?.ToString() ?? "Office";
}

<div class="min-h-screen  bg-blue-30 text-slate-800 font-sans">

    <div class="bg-white border-b border-gray-200 py-12 px-6 md:px-16 lg:px-24">
        <div class="max-w-7xl mx-auto">
            <div class="flex items-center gap-2 text-sm text-slate-500 mb-3">
                <a href="@Url.Action("Index", "Home")" class="hover:text-blue-700 transition-colors">Home</a>
                <span class="text-slate-300">/</span>
                <span class="text-blue-700 font-medium">@categoryType Spaces</span>
            </div>

            <h1 class="text-3xl md:text-4xl font-bold text-slate-900 mb-3">@categoryType Spaces</h1>
            <p class="text-lg text-slate-500 max-w-2xl">Professional offices with meeting rooms, reception areas, and enterprise-grade amenities.</p>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-6 md:px-16 lg:px-24 py-12">
        @if (Model != null && Model.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                @foreach (var apartment in Model)
                {
         
                    string imageUrl = null;
                    try
                    {
                        if (!string.IsNullOrEmpty(apartment.Photos))
                        {
                            if (apartment.Photos.Trim().StartsWith("["))
                            {
                                var photos = System.Text.Json.JsonSerializer.Deserialize<List<string>>(apartment.Photos);
                                imageUrl = photos?.FirstOrDefault();
                            }
                            else
                            {
                                imageUrl = apartment.Photos.Split(',')[0];
                            }
                        }
                    }
                    catch { }
                    

                    <div class="bg-white rounded-xl border border-gray-200 shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden group flex flex-col">

                        <div class="relative h-64 bg-gray-200 overflow-hidden">
                            @if (!string.IsNullOrEmpty(imageUrl))
                            {
                                <img src="@Url.Content(imageUrl)" alt="@apartment.ApartmentNumber" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" />
                            }
                            else
                            {
                                <div class="w-full h-full flex items-center justify-center bg-gray-100 text-gray-400">
                                    <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                    </svg>
                                </div>
                            }

                            <div class="absolute top-4 left-4">
                                <span class="px-3 py-1 bg-white/90 backdrop-blur text-slate-800 text-xs font-bold uppercase rounded shadow-sm">
                                    @apartment.Type
                                </span>
                            </div>
                            <div class="absolute top-4 right-4">
                                <span class="px-3 py-1 bg-blue-600 text-white text-xs font-bold uppercase rounded shadow-sm">
                                    @apartment.Status
                                </span>
                            </div>
                        </div>

                        <div class="p-5 flex flex-col flex-grow">

                            <div class="mb-4">
                                <div class="flex justify-between items-start">
                                    <div>
                                        <h3 class="text-xl font-bold text-slate-800">@apartment.BaseRentRate.ToString("C0")</h3>
                                        <p class="text-xs text-slate-500 font-medium uppercase tracking-wide">Per Month</p>
                                    </div>
                                    <div class="text-right">
                                        <h4 class="text-md font-semibold text-slate-700">Unit @apartment.ApartmentNumber</h4>
                                        <p class="text-sm text-slate-500 truncate max-w-[150px]">@(apartment.Building?.Name ?? "Location TBD")</p>
                                    </div>
                                </div>
                            </div>

                            <div class="border-t border-gray-100 my-3"></div>

                            <div class="flex justify-between items-center text-sm text-slate-600 mb-4">
                                <div class="flex items-center">
                                    <svg class="w-4 h-4 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                                    </svg>
                                    <span>Floor @apartment.FloorNumber</span>
                                </div>
                                <div class="flex items-center">
                                    <svg class="w-4 h-4 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"></path>
                                    </svg>
                                    <span>@apartment.Size sq ft</span>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(apartment.Description))
                            {
                                <p class="text-slate-500 text-sm mb-4 line-clamp-2">@apartment.Description</p>
                            }
                            else
                            {
                                <p class="text-slate-400 text-sm mb-4 italic">No description available.</p>
                            }

                            <div class="mt-auto">
                                <a href="@Url.Action("ApartmentDetails", "User", new { id = apartment.Id })"
                                   class="block w-full text-center py-2 px-4 border border-slate-900 text-slate-900 font-medium rounded-lg hover:bg-slate-900 hover:text-white transition-colors duration-300">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-20 bg-white rounded-xl border border-gray-200 shadow-sm">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-100 mb-4">
                    <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-slate-900 mb-2">No @categoryType Spaces Available</h3>
                <p class="text-slate-500 mb-6">We're sorry, but there are currently no listings in this category.</p>
                <a href="@Url.Action("Index", "Home")"
                   class="inline-block px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-300">
                    Return to Home
                </a>
            </div>
        }
    </div>
</div>