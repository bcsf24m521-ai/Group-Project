@model IEnumerable<ApartmentManagement.Models.Review>

@{
    ViewData["Title"] = "Client Reviews";
}

<section class="hero section page-title-section" style="padding-top: 120px; padding-bottom: 60px;">
    <div class="container" data-aos="fade-up">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <div class="hero-badge mb-3 d-inline-block">
                    <i class="bi bi-chat-quote-fill"></i>
                    <span>Community Feedback</span>
                </div>
                <h1>What Our Clients Say</h1>
                <p class="mb-0 text-muted">
                    Real stories from our valued community members.
                </p>
            </div>
        </div>
    </div>
</section>

<section id="reviews-grid" class="reviews-grid section light-background">
    <div class="container" data-aos="fade-up" data-aos-delay="100">

        @if (Model != null && Model.Any())
        {
            <div class="row gy-4">
                @foreach (var review in Model)
                {
                    <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                        <div class="testimonial-item bg-white p-5 rounded h-100 shadow-sm border-0 position-relative">

                            <div class="quote-icon-bg position-absolute top-0 end-0 p-4 opacity-10 text-primary">
                                <i class="bi bi-quote fs-1"></i>
                            </div>

                            <div class="rating mb-3 text-warning">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= review.Rating)
                                    {
                                        <i class="bi bi-star-fill"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-star text-muted opacity-25"></i>
                                    }
                                }
                            </div>

                            <h3 class="h4 fw-bold mb-3">@review.Title</h3>

                            <p class="text-muted">
                                “@review.Comment”
                            </p>

                            <div class="profile d-flex align-items-center mt-4 pt-3 border-top">
                                <div class="rounded-circle d-flex align-items-center justify-content-center me-3 bg-primary text-white fw-bold"
                                     style="width: 60px; height: 60px; font-size: 1.2rem;">
                                    @(review.Tenant?.User?.FullName?.Substring(0, 1) ?? "T")
                                </div>

                                <div class="profile-info">
                                    <h4 class="m-0 fs-6 fw-bold">@(review.Tenant?.User?.FullName ?? "Verified Tenant")</h4>
                                    <span class="small text-muted">
                                        Resident @(review.Apartment?.Building?.Name != null ? "at " + review.Apartment.Building.Name : "")
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-chat-square-dots text-muted display-4"></i>
                <p class="mt-3 text-muted">No reviews available at the moment.</p>
            </div>
        }

    </div>
</section>

<section id="cta" class="section">
    <div class="container" data-aos="fade-up">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card border-0 shadow-lg overflow-hidden bg-dark text-white text-center p-5">
                    <h2>Are you a resident?</h2>
                    <p class="mb-4">Log in to your tenant dashboard to share your own experience with us.</p>
                    <div>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary px-4 py-2">Login to Review</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>